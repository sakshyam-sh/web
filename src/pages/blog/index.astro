---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="container">
			<section>
				<h1 class="page-title">Writing</h1>
				<p class="intro-text">Thoughts on software, design, and building things.</p>

				<ul class="post-list">
					{posts.map((post) => (
						<li>
							<span class="date-column">
								<FormattedDate date={post.data.pubDate} />
							</span>
							<a href={`/blog/${post.slug}/`} class="post-link">
								{post.data.title}
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-title { font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem; }
	.intro-text { color: var(--gray); margin-bottom: 3rem; font-size: 1.1rem; }

	.post-list { list-style: none; padding: 0; margin: 0; }
	.post-list li {
		display: flex;
		align-items: baseline;
		padding: 1rem 0;
		border-bottom: 1px solid var(--border);
	}
	.post-list li:last-child { border-bottom: none; }

	.date-column {
		font-family: monospace;
		font-size: 0.9rem;
		color: var(--gray);
		width: 120px;
		flex-shrink: 0;
	}

	.post-link {
		font-size: 1.1rem;
		font-weight: 500;
		text-decoration: none;
		color: var(--fg);
		transition: color 0.2s ease;
	}

	.post-link:hover { color: var(--accent); }

	@media (max-width: 600px) {
		.post-list li { flex-direction: column; gap: 0.25rem; }
		.date-column { width: auto; }
	}
</style>
